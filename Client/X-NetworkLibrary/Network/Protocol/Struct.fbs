table Player {
  id			: uint;
  name			: string;
  hp			: float;
  trans			: Transform;
  spine_look	: Vector3;
}

// +------------------------
//	    Phero STRUCT  
// ------------------------+
table Phero {
	id			: uint;
	level		: ubyte;
	offset_dist : Position_Vec2;
}


// +------------------------
//	    Monster STRUCT 
// ------------------------+
table Monster{
	id					:  uint; 
	type				:  MONSTER_TYPE;		// UINT8
	pos_2				:  Position_Vec2;
	rot_y				:  float;				// y
	pheros				:  string; // "123456" --> "123" , "456" -> 1 : Phero Level , 23 : pheroOffsetIndex, (0 : id) ... 456 (1 : id) :: id( = order of decode string )
	
	target_player_id	: int;
	target_monster_id	: int;

}
